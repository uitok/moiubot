# Agent Configuration
PORT=3000
API_KEY=sk_generate_random_key_here

# qBittorrent Configuration
QBT_URL=http://localhost:18080
QBT_USERNAME=admin
QBT_PASSWORD=your_qb_password

# Rclone Configuration
RCLONE_PATH=/usr/bin/rclone
# IMPORTANT: this file must be writable by the user running the Agent (systemd User=...).
# If ~/.config/rclone was created as root and isn't writable, point it to a writable path
# (for example, inside this repo): /home/admin/github/moiubot/runtime/rclone/rclone.conf
RCLONE_CONFIG=/home/user/.config/rclone/rclone.conf

# Download Monitor
MONITOR_INTERVAL=30000
MOVE_TIMEOUT=3600000

# Logging
LOG_LEVEL=info
