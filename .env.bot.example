# Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
DATABASE_PATH=./database/qbt-bot.db
LOG_LEVEL=info

# Allowed Users (comma-separated Telegram IDs)
ALLOWED_USERS=6830441855

# Startup guard: if Telegram API is unreachable and Telegraf launch() hangs,
# exit after this timeout so systemd can restart the bot.
BOT_LAUNCH_TIMEOUT_MS=30000

# Agent -> Bot webhook (optional; enables move_complete/move_error push notifications)
BOT_WEBHOOK_PORT=3334
BOT_WEBHOOK_API_KEY=sk_generate_random_key_here

# API Endpoint for Agent (example)
# This will be managed via database, not env
